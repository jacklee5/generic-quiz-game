<!DOCTYPE HTML>
<html>

<head>
    <%- include partials/meta.ejs %>
    <title>Join Game</title>
</head>

<body>
    <div>
        <header class = "background-primary">
            <nav>
                <a href = "/">
                    <h1>Generic Quiz Game</h1>
                </a>
                <div class = "links">
                    <a href = "/create-set"><i class = "material-icons">add</i>Create</a>
                    <a href = "/play"><i class = "material-icons">play_arrow</i>Join Game</a>
                </div>
                <div class = "profile" id = "profile-button">
                    <%=username%><i class = "material-icons">arrow_drop_down</i>
                </div>
                <div class = "dropdown" id = "profile-dropdown">
                    <a href = "/logout"><i class = "material-icons">input</i>Logout</a>
                </div>
            </nav>
            <h1>Join Game</h1>
        </header>
        <main>
        <div class = "center-text">
            <form id = "form">
                <b>Enter Join Code: </b>
                <input type = "text" style = "margin-left: 8px;" id = "join-code">
                <br><br>
                <button class = "background-secondary">Join Game</button>
            </form>
        </div>
        </main>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        document.getElementById("form").addEventListener("submit", (e) => {
            e.preventDefault();
            socket.emit("new player", document.getElementById("join-code").value);
        });
    </script>
</body>

</html>